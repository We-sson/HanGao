<UserControl x:Class="HanGao.View.User_Control.User_Control_Log"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Work="clr-namespace:HanGao.ViewModel"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="500"
             d:DesignWidth="600"
             DataContext="{Binding Source={StaticResource Locator}, Path=User_Log}"
             mc:Ignorable="d">
    <!--  设备状态显示区域  -->
    <Grid Grid.Row="1" Grid.Column="0">



        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>



        <Border Grid.RowSpan="3"
                Background="{DynamicResource 全局_背景_白颜色}"
                BorderBrush="Transparent"
                CornerRadius="5"
                Effect="{DynamicResource 全局背景阴影}" />

        <Border Grid.Row="0"
                Width="150"
                Margin="0"
                HorizontalAlignment="Left"
                Background="{DynamicResource 全局_按钮_灰颜色}"
                CornerRadius="6"
                Effect="{DynamicResource 全局背景阴影}"
                Opacity=" 0.6" />
        <StackPanel Grid.Row="0"
                    Margin="10,2,0,2"
                    HorizontalAlignment="Left"
                    Orientation="Horizontal">

            <Image Height=" 22"
                   Margin="8,0,5,0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Source="/Resources/Control_设备日志_ioc.png" />


            <TextBlock Text="设备状态"
                       Margin="3"
                       VerticalAlignment="Center"
                       FontFamily="{DynamicResource 全局_文字_中文字体}"
                       FontSize="20"
                       Foreground="{DynamicResource 全局_按钮_黑颜色}"
                       SnapsToDevicePixels="True"
                       TextOptions.TextFormattingMode="Display"
                       UseLayoutRounding="True" />
        </StackPanel>



        <ScrollViewer Style="{DynamicResource Vision_Data_List_ScrollViewerStyle}" x:Name="SV1" Grid.Row="2"
                      Margin="20,10,20,10"
                      CanContentScroll="True"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.ScrollUnit="Item"
                      VirtualizingPanel.VirtualizationMode="Recycling">

            <i:Interaction.Triggers>
                <i:EventTrigger EventName="ScrollChanged">
                    <i:InvokeCommandAction Command="{Binding Update_Log_Comm}"
                                           CommandParameter="{Binding ElementName=SV1}"
                                           PassEventArgsToCommand="True" />
                </i:EventTrigger>
            </i:Interaction.Triggers>


            <TextBox Grid.Column=" 0"
                     Text="{Binding User_UI_Log.User_Log}"
                     TextWrapping="Wrap"
                     Margin="6,6,0,6"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Top"
                     Background="Transparent"
                     BorderThickness="0"
                     FontFamily="{DynamicResource 全局_文字_数字字体}"
                     FontSize="16"
                     Foreground="{DynamicResource 全局_按钮_黑颜色}" />

