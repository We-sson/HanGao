<Window
    x:Class="Robot_Info_Mes.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:Robot_Info_Mes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="1000"
    Height="500"
    DataContext="{Binding Robot_Info_VM, Source={StaticResource Locator}}"
    mc:Ignorable="d">
    <Grid Background="{DynamicResource 全局_背景_白颜色}">
        <Grid.ColumnDefinitions>

            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Margin="20,0,20,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontFamily="{DynamicResource 全局_图标库}"
            FontSize="32"
            Foreground="{DynamicResource 全局_按钮_蓝颜色}"
            Text="&#xe641;" />
        <TextBlock
            Grid.Row="0"
            Grid.Column="1"
            Margin="100,0,20,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontFamily="{DynamicResource 全局_文字_中文字体}"
            FontSize="32"
            Foreground="{DynamicResource 全局_按钮_蓝颜色}"
            Text="设备运行状态读取上位机" />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Margin="5">
                <Border
                    Background="{DynamicResource 全局_背景_白颜色}"
                    BorderBrush="{DynamicResource 全局_按钮_蓝颜色}"
                    BorderThickness="3"
                    CornerRadius="10"
                    Effect="{DynamicResource 全局背景阴影}" />


                <Grid Height=" 35" Margin="0,8,0,8">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column=" 0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontFamily="{DynamicResource 全局_文字_中文字体}"
                        FontSize="16"
                        Foreground="{DynamicResource 全局_按钮_黑颜色}"
                        Text="配置文件" />
                    <ComboBox
                        Grid.Column=" 1"
                        HorizontalContentAlignment="Left"
                        VerticalContentAlignment="Center"
                        BorderBrush="{DynamicResource 全局_按钮_黑颜色}"
                        BorderThickness="2"
                        IsDropDownOpen="False"
                        IsSynchronizedWithCurrentItem="True"
                        ItemsSource="{Binding Halcon_3DStereoModel.TwoCamera_Calibration_HCameraSetupModel_List}"
                        SelectedValue="{Binding Halcon_3DStereoModel.Select_TwoCamera_Calibration_HCameraSetupMode}"
                        Style="{DynamicResource Data_ComboBoxStyle}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Padding="0,4,0,4"
                                    FontFamily="{DynamicResource 全局_文字_数字字体}"
                                    FontSize="13"
                                    Foreground="{DynamicResource 全局_按钮_黑颜色}"
                                    Text="{Binding Fold.Name}"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="Wrap" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>

                        <i:Interaction.Triggers>

                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction
                                    Command="{Binding }"
                                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=EventArgsConverter}"
                                    PassEventArgsToCommand="True" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>


                    </ComboBox>
                </Grid>


            </Grid>
            <Grid Grid.Column="1" Margin="5">
                <Border
                    Background="{DynamicResource 全局_背景_白颜色}"
                    BorderBrush="{DynamicResource 全局_按钮_蓝颜色}"
                    BorderThickness="3"
                    CornerRadius="10"
                    Effect="{DynamicResource 全局背景阴影}" />
            </Grid>

        </Grid>







    </Grid>
</Window>
