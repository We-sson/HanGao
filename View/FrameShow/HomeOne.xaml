<UserControl x:Class="悍高软件.View.FrameShow.HomeOne"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:悍高软件.View.FrameShow"
      xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
       d:DesignHeight="700"
      d:DesignWidth="1080" mc:Ignorable="d">






    <Grid ShowGridLines="False" Background="Transparent">

        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="380" />
            <ColumnDefinition />

        </Grid.ColumnDefinitions>


        <Grid Margin="0,10,0,0" ShowGridLines="False">
            <Grid.RowDefinitions>
                <RowDefinition Height="80" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Border x:Name="bd2" Grid.Column="0"
                    Margin="25,18,25,18"
                    Background="#F6F6F6"
                    CornerRadius="10,10,10,10"
                    BorderThickness="0" BorderBrush="Black">


                <Border.Effect>
                    <DropShadowEffect BlurRadius="6" ShadowDepth="0"
                                      Opacity="50" Color="Gray" />
                </Border.Effect>









                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.2*" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="Tt2" Grid.Column="0"
                               Text="&#xe6e5;"
                               Margin="0,0,0,0"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="Black" FontSize="25"
                               FontFamily="/Resources/#iconfont" />

                    <TextBox Style="{StaticResource TextBoxStyle1}" x:Name="Tt1" Grid.Column="1"
                             MaxLength="10"
                             VerticalContentAlignment="Center"
                             DataContext="{Binding Source={StaticResource Locator}, Path=List_Show}"
                             FontSize="25" Background="Transparent"
                             BorderThickness="0"
                             TextAlignment="Center">
                        <TextBox.Triggers />
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="TextChanged" SourceName="Tt1">
                                <i:InvokeCommandAction Command="{Binding Find_List_event}" CommandParameter="{Binding ElementName=Tt1, Path=Text}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>

                    </TextBox>


                </Grid>



            </Border>



            <ListBox Style="{DynamicResource ListBoxStyle1}" x:Name="LB1" Grid.Row="1"
                     HorizontalContentAlignment="Center"
                     Background="Transparent"
                     ItemsSource="{Binding SinkModels}"
                     DataContext="{Binding Source={StaticResource Locator}, Path=List_Show}"
                     ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     ItemContainerStyle="{DynamicResource ListBoxItemStyle1}"
                     ItemTemplate="{DynamicResource DataTemplate1}"
                     RenderTransformOrigin="0.5,0.5">
                <ListBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform />
                        <SkewTransform />
                        <RotateTransform />
                        <TranslateTransform />
                    </TransformGroup>
                </ListBox.RenderTransform>
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel Margin="0,20,0,0" Orientation="Vertical" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
            </ListBox>
        </Grid>



        <TextBlock Grid.Column="1"
                   Text="控制台" Width="120" Height="51"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" FontSize="40"
                   Foreground="White" />
    </Grid>
</UserControl>
