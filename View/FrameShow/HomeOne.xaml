<Page x:Class="悍高软件.View.FrameShow.HomeOne"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:悍高软件.View.FrameShow"
      Title="Home" d:DesignHeight="700"
      d:DesignWidth="1080" mc:Ignorable="d">

    <Grid ShowGridLines="True" Background="Transparent">

        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="380" />
            <ColumnDefinition />

        </Grid.ColumnDefinitions>


        <Grid ShowGridLines="False">
            <Grid.RowDefinitions>
                <RowDefinition Height="80" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Border x:Name="bd2" Grid.Column="0"
                    Margin="25,18,25,18"
                    Background="#F6F6F6"
                    CornerRadius="10,10,10,10"
                    BorderThickness="0" BorderBrush="Black">


                <Border.Effect>
                    <DropShadowEffect BlurRadius="6" ShadowDepth="0"
                                      Opacity="50" Color="Gray" />
                </Border.Effect>









                <Grid>



                    <TextBox Style="{StaticResource TextBoxStyle1}" x:Name="Tt1" Grid.Row="0"
                             MaxLength="10"
                             VerticalContentAlignment="Center"
                             FontSize="25" Background="Transparent"
                             BorderThickness="0"
                             TextAlignment="Center" />


                </Grid>



            </Border>



            <ListBox x:Name="LB1" Grid.Row="1"
                     HorizontalContentAlignment="Center"
                     Background="White"
                     ItemsSource="{Binding SinkModels}"
                     DataContext="{Binding Source={StaticResource Locator}, Path=List_Show}"
                     ScrollViewer.HorizontalScrollBarVisibility="Auto">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel Margin="0,20,0,0" Orientation="Vertical" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,10,0,10"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Background="#065684" BorderThickness="5"
                                BorderBrush="Black" CornerRadius="20">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="30" ShadowDepth="0"
                                                  Opacity="10" Color="Gray" />
                            </Border.Effect>
                            <Grid Margin="0" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>


                                <TextBlock Grid.Column="0"
                                           Text="&#xe60a;" Margin="13"
                                           HorizontalAlignment="Stretch"
                                           VerticalAlignment="Center"
                                           FontFamily="/Resources/#iconfont"
                                           FontSize="80" />
                                <Border Grid.Column="1"
                                        Width="5" VerticalAlignment="Stretch"
                                        Background="Black" />
                                <TextBlock Grid.Column="2"
                                           Text="{Binding Model_Number}"
                                           Margin="10"
                                           HorizontalAlignment="Stretch"
                                           VerticalAlignment="Center" FontSize="35"
                                           Foreground="#E3E3E3" />
                            </Grid>
                        </Border>


                    </DataTemplate>
                </ListBox.ItemTemplate>



            </ListBox>





        </Grid>

        <ScrollViewer Grid.Column="1"
                      Width="100" Height="600"
                      HorizontalAlignment="Right"
                      VerticalScrollBarVisibility="Visible"
                      HorizontalScrollBarVisibility="Visible" />

        <TextBlock Grid.Column="1"
                   Text="控制台" Width="120" Height="51"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" FontSize="40"
                   Foreground="White" />
    </Grid>
</Page>
