<UserControl x:Class="悍高软件.View.User_Control.User_Control_Right_Show_Value"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:悍高软件.View.User_Control"
             d:DesignHeight="800" d:DesignWidth="500"
             mc:Ignorable="d">
    <UserControl.Resources />
    <Grid Background="#FFEC6262">





        <Grid  Margin="100">




            <Border x:Name="MaskBorder"
                    Margin="0" Padding="10"
                    Background="#FFEC6262" CornerRadius="10"  />

            <Border >
                <Border.OpacityMask>
                    <VisualBrush Visual="{Binding ElementName=MaskBorder}" />
                </Border.OpacityMask>

                <Border Margin="0" BorderThickness="3"
                        BorderBrush="Black"
                        Background="#FFEC6262" CornerRadius="10"
                        ClipToBounds="True">
                    <Border.Effect>
                        <BlurEffect Radius="17" />
                    </Border.Effect>
                </Border>






            </Border>











        </Grid>


    </Grid>
</UserControl>
