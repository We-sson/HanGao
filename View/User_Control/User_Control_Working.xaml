<UserControl x:Class="悍高软件.View.User_Control.User_Control_Working"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:悍高软件.View.User_Control"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:cmd="http://www.galasoft.ch/mvvmlight"
             d:DesignHeight="435" d:DesignWidth="675"
             DataContext="{Binding Source={StaticResource Locator}, Path=User_Control_Working_VM_2}"
             mc:Ignorable="d">
    <Grid Style="{DynamicResource Gd_Effect}" Grid.Row="0" Grid.Column="0"
          Margin="15" ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.17*" />
            <RowDefinition />
        </Grid.RowDefinitions>


        <Border x:Name="Bd1"
                Grid.RowSpan="2" CornerRadius="35"
                Background="{Binding WM.Work_back, Mode=TwoWay}">




            <!--<Border.Style>
                <Style TargetType="Border">

                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsChecked, ElementName=Work_Run_Check}" Value="True">
                            <Setter Property="Background" Value="#22AB38" />
                        </DataTrigger>

                    </Style.Triggers>
                </Style>
            </Border.Style>-->

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Orientation="Horizontal">
                <TextBlock x:Name="TB2"
                           Text="{Binding WM.Number_Work}"
                           Margin="0,10,30,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontFamily="DengXian" FontSize="50" />
                <TextBlock x:Name="TB1" Grid.Column="1"
                           Grid.ColumnSpan="2"
                           Text="{Binding WM.Work_Type}"
                           Margin="0,10,0,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" FontSize="50"
                           FontStretch="Condensed"
                           FontFamily="DengXian" />
            </StackPanel>

        </Border>


        <Border Grid.Row="1"
                Margin="5" Background="#F6F6F6"
                CornerRadius="30">


            <Grid Style="{DynamicResource GridStyle1}" Margin="10" ShowGridLines="False">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />

                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="45" />
                    <RowDefinition Height="4" />
                    <RowDefinition Height="80" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Grid.Column="0"
                        Grid.RowSpan="2" Grid.ColumnSpan="2"
                        Margin="-7" Visibility="Collapsed"
                        BorderThickness="2" BorderBrush="Gray"
                        CornerRadius="25" />
                <TextBlock Grid.ColumnSpan="2" Text="基本功能"
                           Height="35.56" Margin="0,0,0,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" FontSize="28" />

                <Border Grid.Row="1"
                        Margin="25,0,25,0" Opacity="0.5"
                        Background="#A0A0A0" CornerRadius="2" />


                <UniformGrid Grid.Row="2"
                             Margin="0,10,0,0" Columns="5" Rows="1">

                    <CheckBox Style="{DynamicResource Button_List_Style}" x:Name="Work_Run_Check"
                              Content="启动"
                              IsChecked="{Binding WM.Work_Run, Mode=TwoWay}"
                              Margin="3" HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              IsEnabled="{Binding WM.Work_IsEnabled}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <!--<cmd:EventToCommand Command="{Binding Path=DataContext.Set_Working_Comm, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListBox}}}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=EventArgsConverter}" PassEventArgsToCommand="True" />-->
                                <i:InvokeCommandAction Command="{Binding Path=DataContext.Work_Run_Comm, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:User_Control_Working}}}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=EventArgsConverter}" PassEventArgsToCommand="True" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>



                    </CheckBox>

                    <CheckBox Style="{DynamicResource Button_List_Style}"
                              Content="计数"
                              IsChecked="{Binding WM.Work_Connt, Mode=TwoWay}"
                              Margin="3" HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              IsEnabled="{Binding WM.Work_IsEnabled}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <!--<cmd:EventToCommand Command="{Binding Path=DataContext.Set_Working_Comm, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListBox}}}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=EventArgsConverter}" PassEventArgsToCommand="True" />-->
                                <i:InvokeCommandAction Command="{Binding Path=DataContext.Work_Connt_Comm, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:User_Control_Working}}}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=EventArgsConverter}" PassEventArgsToCommand="True" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </CheckBox>



                    <CheckBox Style="{DynamicResource Button_List_Style}"
                              Content="空运"
                              IsChecked="{Binding WM.Work_NullRun, Mode=TwoWay}"
                              Margin="3" HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              IsEnabled="{Binding WM.Work_IsEnabled}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <!--<cmd:EventToCommand Command="{Binding Path=DataContext.Set_Working_Comm, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListBox}}}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=EventArgsConverter}" PassEventArgsToCommand="True" />-->
                                <i:InvokeCommandAction Command="{Binding Path=DataContext.Work_NullRun_Comm, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:User_Control_Working}}}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=EventArgsConverter}" PassEventArgsToCommand="True" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </CheckBox>
                    <CheckBox Style="{DynamicResource Button_List_Style}"
                              Content="暂停"
                              IsChecked="{Binding WM.Work_Pause, Mode=TwoWay}"
                              Margin="3" HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              IsEnabled="{Binding WM.Work_IsEnabled}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <!--<cmd:EventToCommand Command="{Binding Path=DataContext.Set_Working_Comm, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListBox}}}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=EventArgsConverter}" PassEventArgsToCommand="True" />-->
                                <i:InvokeCommandAction Command="{Binding Path=DataContext.Work_Pause_Comm, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:User_Control_Working}}}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=EventArgsConverter}" PassEventArgsToCommand="True" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </CheckBox>
                    <CheckBox Style="{DynamicResource Button_List_Style}"
                              Content="跳过"
                              IsChecked="{Binding WM.Work_JumpOver, Mode=TwoWay}"
                              Margin="3" HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              IsEnabled="{Binding WM.Work_IsEnabled}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <!--<cmd:EventToCommand Command="{Binding Path=DataContext.Set_Working_Comm, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListBox}}}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=EventArgsConverter}" PassEventArgsToCommand="True" />-->
                                <i:InvokeCommandAction Command="{Binding Path=DataContext.Work_JumpOver_Comm, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:User_Control_Working}}}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=EventArgsConverter}" PassEventArgsToCommand="True" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </CheckBox>



                </UniformGrid>


                <Grid Grid.Row="3" ShowGridLines="False">


                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                        <RowDefinition Height=" 4" />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="机器人运行数据" Margin="0"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" FontSize="25" />

                    <Border Grid.Row="1"
                            Margin="25,0,25,0" Background="#A0A0A0"
                            CornerRadius="5" Opacity="0.5" />


                    <Grid Grid.Row="2" Margin="10,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>


                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="130" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center">
                                <TextBlock Text="机器速度："
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center" FontSize="25"
                                           Foreground="#FF464646" />
                                <TextBlock Text="焊接功率："
                                           HorizontalAlignment="Center"
                                           FontSize=" 25" Foreground="#FF464646" />

                                <TextBlock Text="当前状态："
                                           HorizontalAlignment="Center"
                                           FontSize=" 25" Foreground="#FF464646" />

                            </StackPanel>

                            <StackPanel Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center">
                                <TextBlock Text="{Binding WM.Robot_Speed}"
                                           HorizontalAlignment="Left" FontSize="25"
                                           Foreground="Gray" />
                                <TextBlock Text="{Binding WM.Welding_Power}"
                                           HorizontalAlignment="Left"
                                           FontSize=" 25" Foreground="Gray" />

                                <TextBlock Text="{Binding WM.Robot_status}"
                                           HorizontalAlignment="Left"
                                           FontSize=" 25" Foreground="Gray" />
                            </StackPanel>
                        </Grid>

                    </Grid>


                </Grid>




            </Grid>



        </Border>




    </Grid>



</UserControl>
