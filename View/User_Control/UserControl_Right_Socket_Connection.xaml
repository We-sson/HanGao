<UserControl x:Name="userControl"
             x:Class="悍高软件.View.User_Control.UserControl_Right_Socket_Connection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:悍高软件.View.User_Control"
             d:DesignHeight="800" d:DesignWidth="500"
             DataContext="{Binding Source={StaticResource Locator}, Path=UserControl_Right_Socket_Connection_ViewModel}"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.6*" />
            <RowDefinition />
            <RowDefinition Height="0.3*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <StackPanel Margin="50,30,50,0">


                <Border x:Name="BD1"
                        Height="55" Margin="5"
                        Background="#c5c5c5" CornerRadius="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.4*" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Text="地址:" HorizontalAlignment="Center"
                                   VerticalAlignment="Center" FontSize="30" />
                        <TextBox Style="{StaticResource TextBoxStyle1}" Grid.Column="1"
                                 Name="TB1" Margin="0,0,30,0"
                                 VerticalAlignment="Center"
                                 Tag="输入控制柜IP地址" FontSize="25"
                                 Background="Transparent" />

                    </Grid>
                </Border>
                <Border Height="55"
                        Margin="{Binding ElementName=BD1, Path=Margin}"
                        Background="{Binding ElementName=BD1, Path=Background}"
                        CornerRadius="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.4*" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Text="端口:" HorizontalAlignment="Center"
                                   VerticalAlignment="Center" FontSize="30" />
                        <TextBox Style="{StaticResource TextBoxStyle1}" Grid.Column="1"
                                 Name="TB2" Margin="0,0,30,0"
                                 VerticalAlignment="Center" FontSize="25"
                                 Tag="输入连接端口默认7000" />

                    </Grid>
                </Border>

                <Button Style="{StaticResource ButtonStyle3}"
                        Height="50" Margin="5"
                        Background="#47aa57">

                    <TextBlock Text="连接" HorizontalAlignment="Center"
                               VerticalAlignment="Center" FontSize="30"
                               Foreground="White" />

                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <i:InvokeCommandAction Command="{Binding Path=DataContext.Socket_Connection_Comm, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:UserControl_Right_Socket_Connection}}}" CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:UserControl_Right_Socket_Connection}}}" PassEventArgsToCommand="True" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Button>



            </StackPanel>
        </Grid>


        <Grid Grid.Row="1">


            <TextBlock Name="TB3" Background="White" />
        </Grid>




        <Grid Grid.Row="2">
            <Button Style="{StaticResource ButtonStyle3}"
                    Height="50" Margin="5"
                    Background="#47aa57">

                <TextBlock Text="发送" HorizontalAlignment="Center"
                           VerticalAlignment="Center" FontSize="30"
                           Foreground="White" />

                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <i:InvokeCommandAction Command="{Binding Path=DataContext.Socket_Connection_Comm, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:UserControl_Right_Socket_Connection}}}" CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:UserControl_Right_Socket_Connection}}}" PassEventArgsToCommand="True" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Button>
        </Grid>


    </Grid>
</UserControl>
