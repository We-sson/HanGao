<UserControl x:Class="HanGao.View.User_Control.Program_Editing.Point_UI.UC_Surround_Point"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HanGao.View.User_Control.Program_Editing.Point_UI"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             d:DesignHeight="466"
             d:DesignWidth="760"
             DataContext="{Binding Source={StaticResource Locator}, Path=UC_Surround_Point_VM}"
             mc:Ignorable="d">
    <Grid Margin="40,30,30,30">




        <DataGrid Style="{DynamicResource Point_DataGridStyle}"
                  d:ItemsSource="{d:SampleData ItemCount=5}"
                  SelectedItem="{Binding User_Selected_SInk_Pos}"
                  CellStyle="{DynamicResource Point_DataGridCellStyle}"
                  RowStyle="{DynamicResource Point_DataGridRowStyle}"
                  IsReadOnly="True"
                  ColumnHeaderStyle="{DynamicResource Point_DataGridColumnHeaderStyle}"
                  GridLinesVisibility="None"
                  Background="Transparent"
                  HeadersVisibility="Column"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  SelectionUnit="FullRow"
                  SelectionMode="Single"
                  CanUserResizeColumns="False"
                  CanUserReorderColumns="False"
                  CanUserDeleteRows="False"
                  ColumnWidth="*"
                  RowBackground="Transparent"
                  AlternatingRowBackground="Transparent"
                  RowHeight="56"
                  ItemsSource="{Binding Surround_Offset_Point}">



            <DataGrid.Columns>



                <DataGridTemplateColumn Width="80" Header="序号">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Offset_NO}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="20" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>

                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="名称">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Offset_Name}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="20" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>


                <DataGridTemplateColumn Header="偏移 X">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Offset_X}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="20" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="偏移 Y">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Offset_Y}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="20" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>


                <DataGridTemplateColumn Header="偏移 Z">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Offset_Z}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="20" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>




        </DataGrid>



    </Grid>
</UserControl>
