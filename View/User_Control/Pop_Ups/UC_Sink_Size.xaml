<UserControl x:Class="HanGao.View.User_Control.Pop_Ups.UC_Sink_Size"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HanGao.View.User_Control.Pop_Ups"
             d:DesignWidth="1020"
             DataContext="{Binding UC_Sink_Size_VM, Mode=OneWay, Source={StaticResource Locator}}"
             mc:Ignorable="d">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width=" auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>



        <UniformGrid Grid.Column="0"
                     Height="{Binding ActualHeight, ElementName=Sink_ico}"
                     HorizontalAlignment="Center" Rows="2">



            <TextBox Style="{DynamicResource TextBox_Style}"
                     Text="640" HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     FontFamily="Calibri" Tag="水槽长度=" />
            <TextBox Style="{DynamicResource TextBox_Style}"
                     Text="345" HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     FontFamily="Calibri" Tag="水槽宽度=" />

        </UniformGrid>
        <Button Style="{StaticResource ButtonStyle3}" Grid.Column="0"
                Content="工艺参数" Width="140" Height=" 40"
                Margin="0,0,0,-100"
                VerticalAlignment="Bottom"
                Background="#ff5e58" FontSize="22" />



        <TextBlock Grid.Column="1"
                   Name="Sink_ico"
                   Text="&#xE61B;"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Effect="{StaticResource 全局背景阴影}"
                   FontSize="250" Foreground="#FF4B6587"
                   FontFamily="/Resources/#iconfont" />



        <UniformGrid Grid.Column="2"
                     Height="{Binding ActualHeight, ElementName=Sink_ico}"
                     HorizontalAlignment="Center" Rows="2">



            <TextBox Style="{DynamicResource TextBox_Style}"
                     Text="23" HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     FontFamily="Calibri" Tag="小边长度=" />
            <TextBox Style="{DynamicResource TextBox_Style}"
                     Text="20" HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     FontFamily="Calibri" Tag="圆角直径=" />

        </UniformGrid>
        <Button Style="{StaticResource ButtonStyle3}" Grid.Column="2"
                Content="确定" Width="140" Height=" 40"
                Margin="0,0,0,-100"
                VerticalAlignment="Bottom"
                Background="#6baa75" FontSize="22" />









        <!--  起点 起点x,起点y 画椭圆 长轴,短轴 旋转角度 是否是优弧 正角方向绘制 终点x,终点y  -->


    </Grid>
</UserControl>
