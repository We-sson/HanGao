<UserControl x:Class="HanGao.View.User_Control.UC_Pop_Ups"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Pop="clr-namespace:HanGao.View.User_Control.Pop_Ups"
             DataContext="{Binding Source={StaticResource Locator}, Path=UC_Pop_Ups_VM}"
             mc:Ignorable="d">

    <Grid>
        <!--  背景遮挡  -->
        <Border Style="{StaticResource 全局_弹窗_背景侧挡样式}" />
        <Border Width="1100"
                Height="700"
                CornerRadius="25"
                Background="#EBEBEB">

            <Grid Margin="40,0,40,40">

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition />

                </Grid.RowDefinitions>

                <Button Style="{StaticResource Windows_Button_Style}"
                        Margin="0,20,-20,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Background="Red">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <i:InvokeCommandAction Command="{Binding Pop_Close_Comm}"
                                                   CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=EventArgsConverter}"
                                                   PassEventArgsToCommand="True" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Button>


                <Grid Grid.Row="0"
                      Margin="100,0,100,0"
                      VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />

                    </Grid.ColumnDefinitions>

                    <RadioButton Style="{DynamicResource RadioButton_Pop_Style}" x:Name="R1" Grid.Column="0"
                                 IsChecked="{Binding Sink_Type_Checked}"
                                 Tag="0"
                                 ToolTip="水槽类型选择"
                                 GroupName="Pop_UI">
                        <Border CornerRadius="5"
                                Background="{Binding Background, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Border}}}">


                            <StackPanel Margin="5"
                                        Orientation="Vertical">
                                <TextBlock Text="&#xe6c0;"
                                           Margin="15"
                                           HorizontalAlignment="Center"
                                           FontSize="50"
                                           FontFamily="/Resources/#iconfont"
                                           Foreground="#FF4B6587" />
                                <TextBlock Text="水槽类型选择"
                                           HorizontalAlignment="Center"
                                           FontSize="15" />
                            </StackPanel>
                        </Border>


                    </RadioButton>

                    <Border Grid.Column="1"
                            Height="4"
                            Background="#FFCFCFCF"
                            CornerRadius="2" />

                    <RadioButton Style="{DynamicResource RadioButton_Pop_Style}" x:Name="R2" Grid.Column="2"
                                 IsChecked="{Binding Sink_Size_Checked}"
                                 Tag="1"
                                 GroupName="Pop_UI"
                                 ToolTip="水槽尺寸修改">
                        <StackPanel>
                            <TextBlock Text="&#xe64f;"
                                       Margin="15"
                                       HorizontalAlignment="Center"
                                       FontSize="50"
                                       Foreground="#FF4B6587"
                                       FontFamily="/Resources/#iconfont" />
                            <TextBlock Text="水槽尺寸调节"
                                       HorizontalAlignment="Center"
                                       FontSize="15" />
                        </StackPanel>

                    </RadioButton>

                    <Border Grid.Column="3"
                            Height="4"
                            Background="#FFCFCFCF"
                            CornerRadius="2" />


                    <RadioButton Style="{DynamicResource RadioButton_Pop_Style}" x:Name="R3" Grid.Column="4"
                                 IsChecked="{Binding Sink_Craft_Checked}"
                                 Tag="2"
                                 GroupName="Pop_UI"
                                 ToolTip="水槽工艺参数">
                        <StackPanel>
                            <TextBlock Text="&#xe649;"
                                       Margin="15"
                                       HorizontalAlignment="Center"
                                       FontSize="50"
                                       Foreground="#FF4B6587"
                                       FontFamily="/Resources/#iconfont" />
                            <TextBlock Text="工艺参数调节"
                                       HorizontalAlignment="Center"
                                       FontSize="15" />
                        </StackPanel>

                    </RadioButton>



                </Grid>


                <GroupBox Style="{StaticResource GroupBox_Grid_Effect}" Grid.Row="1"
                          Background="#EBEBEB">
                    <ContentControl VerticalAlignment="Center">
                        <ContentControl.Style>
                            <Style TargetType="ContentControl">
                                <Setter Property="Content" Value="{x:Null}" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=R1, Path=IsChecked}"
                                                 Value="TRUE">
                                        <Setter Property="Content">
                                            <Setter.Value>

                                                <Pop:UC_Sink_Type DataContext="{Binding Source={StaticResource Locator}, Path=UC_Sink_Type_VM}" />
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ElementName=R2, Path=IsChecked}"
                                                 Value="TRUE">
                                        <Setter Property="Content">
                                            <Setter.Value>
                                                <Pop:UC_Sink_Size DataContext="{Binding Source={StaticResource Locator}, Path=UC_Sink_Size_VM}" />
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ElementName=R3, Path=IsChecked}"
                                                 Value="TRUE">
                                        <Setter Property="Content">
                                            <Setter.Value>
                                                <Pop:UC_Sink_Craft_List DataContext="{Binding Source={StaticResource Locator}, Path=UC_Sink_Craft_List_VM}" />
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ContentControl.Style>
                    </ContentControl>




                </GroupBox>






            </Grid>

        </Border>
    </Grid>
</UserControl>
