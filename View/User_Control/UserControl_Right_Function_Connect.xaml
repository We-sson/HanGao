<UserControl x:Class="悍高软件.View.User_Control.UserControl_Right_Function_Connect"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:悍高软件.View.User_Control"
             xmlns:Controls="clr-namespace:Nicenis.Windows.Controls;assembly=Nicenis"
             d:DesignHeight="992"
             d:DesignWidth="1920"
             DataContext="{Binding Source={StaticResource Locator}, Path=UserControl_Right_Function_Connect_ViewModel}"
             mc:Ignorable="d">
    <UserControl.Resources />




    <Grid>





        <Grid x:Name="GD1"
              Margin="-500,0,0,0"
              HorizontalAlignment="Left"
              ClipToBounds="True"
              SnapsToDevicePixels="True"
              UseLayoutRounding="True">
            <Grid.Style>
                <Style TargetType="Grid">

                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Open}" Value=" True">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard Timeline.DesiredFrameRate="120">
                                        <ThicknessAnimation SpeedRatio="10"
                                                            Storyboard.TargetProperty="(FrameworkElement.Margin)"
                                                            To="0,0,0,0" Duration="0:0:0:10">
                                            <ThicknessAnimation.EasingFunction>
                                                <QuinticEase EasingMode="EaseOut" />
                                            </ThicknessAnimation.EasingFunction>
                                        </ThicknessAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard Timeline.DesiredFrameRate="60">
                                        <ThicknessAnimation SpeedRatio="15"
                                                            Storyboard.TargetProperty="(FrameworkElement.Margin)"
                                                            To="-500,0,0,0" Duration="0:0:0:10">
                                            <ThicknessAnimation.EasingFunction>
                                                <QuinticEase EasingMode="EaseIn" />
                                            </ThicknessAnimation.EasingFunction>
                                        </ThicknessAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="1" Width=" 50" HorizontalAlignment="Right">



                <Grid Uid="Open"
                      Margin="{Binding Subtitle_Position}"
                      VerticalAlignment="Top" Panel.ZIndex="0">




                    <Border x:Name="BD1"
                            Margin="0,0,3,0"
                            CornerRadius="0 10 10 0"
                            SnapsToDevicePixels="False">



                        <Border.Background>
                            <SolidColorBrush Opacity=" 1" Color="White" />
                        </Border.Background>






                        <StackPanel Margin="0,20,0,0">
                            <!--  连接状态呼吸灯  -->
                            <Ellipse x:Name="ellipse"
                                     Uid="Open" Width="25" Height="25"
                                     Margin="0,10,0,10"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     Visibility="Visible" Stroke="Black">

                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill">
                                            <Setter.Value>
                                                <SolidColorBrush Opacity="0.5" Color="Transparent" />
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Sidebar_Subtitle_Signal}" Value="true">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard RepeatBehavior="1" AutoReverse="True">
                                                            <ColorAnimation SpeedRatio="3"
                                                                            Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                                            To="Green" Duration="0:0:0:1">

                                                                <ColorAnimation.EasingFunction>
                                                                    <QuinticEase EasingMode="EaseIn" />
                                                                </ColorAnimation.EasingFunction>
                                                            </ColorAnimation>
                                                            <DoubleAnimation SpeedRatio="5"
                                                                             Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Opacity)"
                                                                             To="1" Duration="0:0:0:1" />
                                                            <ColorAnimation SpeedRatio="1"
                                                                            Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                                            To="Green" Duration="0:0:0:1" />
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.EnterActions>
                                                <DataTrigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation SpeedRatio="2"
                                                                            Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                                            To="Transparent" Duration="0:0:0:1">
                                                                <ColorAnimation.EasingFunction>
                                                                    <QuinticEase EasingMode="EaseIn" />
                                                                </ColorAnimation.EasingFunction>
                                                            </ColorAnimation>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.ExitActions>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>

                            <TextBlock Uid="Open"
                                       Text="{Binding Sidebar_Subtitle}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" FontSize="20" />

                        </StackPanel>
                    </Border>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseLeftButtonDown">
                            <i:InvokeCommandAction Command="{Binding Path=DataContext.Click_OPen_Comm, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:UserControl_Right_Function_Connect}}}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=EventArgsConverter}" PassEventArgsToCommand="True" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>

                </Grid>



            </Grid>

            <Grid x:Name="GD2" Grid.Column="0" Width="500">
                <Border Width="500" CornerRadius="0 20 20 0">



                    <Border.Background>
                        <SolidColorBrush Opacity="{Binding Background.Opacity, ElementName=BD1}" Color="{Binding Background.Color, ElementName=BD1}" />

                    </Border.Background>

                </Border>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="70" />
                        <RowDefinition />
                        <RowDefinition Height=" 80" />

                    </Grid.RowDefinitions>



                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width=" 0.2*" />
                        </Grid.ColumnDefinitions>

                        <Button Style="{DynamicResource ButtonStyle2}" Grid.Column="1"
                                Uid="Close" Margin="10"
                                VerticalAlignment="Center">
                            <TextBlock Text="&#xe606;"
                                       Visibility="Visible"
                                       FontFamily="/Resources/#iconfont"
                                       FontSize="38" Foreground="#FF5E57"
                                       RenderTransformOrigin="0.5,0.5">
                                <TextBlock.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform />
                                        <SkewTransform />
                                        <RotateTransform Angle="180" />
                                        <TranslateTransform />
                                    </TransformGroup>
                                </TextBlock.RenderTransform>
                            </TextBlock>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding Path=DataContext.Click_OPen_Comm, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:UserControl_Right_Function_Connect}}}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=EventArgsConverter}" PassEventArgsToCommand="True" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Button>

                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   Text="{Binding Sidebar_MainTitle}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" FontSize="35" />

                    </Grid>

                    <ContentControl x:Name="CC1" Grid.Row="1" Content="{Binding Sidebar_Control}" />


                </Grid>
            </Grid>



        </Grid>



    </Grid>

    <UserControl.Triggers>




