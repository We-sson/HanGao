<Window x:Name="WD1"
        x:Class="悍高软件.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:悍高软件"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:usermessage="clr-namespace:悍高软件.View.UserMessage"
        Title="MainWindow" Width="1920"
        Height="1080" Padding="0"
        Background="Gray"
        AllowsTransparency="True"
        WindowStyle="None" mc:Ignorable="d">


    <!--  拖动标题栏顶部范围  -->
    <WindowChrome.WindowChrome>
        <WindowChrome UseAeroCaptionButtons="True"
                      CaptionHeight="15"
                      GlassFrameThickness="0"
                      CornerRadius="45" />
    </WindowChrome.WindowChrome>













    <Grid x:Name="grid" Background="#E3E3E3">




        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition Height="5" />
            <RowDefinition />
        </Grid.RowDefinitions>




        <!--  主页标题栏  -->
        <Grid Grid.Row="0"
              Margin="0,15,0,0" ShowGridLines="False"
              DataContext="{Binding Source={StaticResource Locator}, Path=FrameShow}">





            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.3*" />
                <ColumnDefinition />
                <ColumnDefinition Width=" 0.15*" />
            </Grid.ColumnDefinitions>

            <!--  首页_左上角_公司图标  -->
            <Image Style="{StaticResource 首页_左上角_公司图标_样式}" Grid.Column="0"
                   Width="300" Margin="25,0,35,0"
                   HorizontalAlignment="Center" />
            <StackPanel Grid.Column="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">

                <RadioButton Style="{StaticResource 标题_选项_样式}" x:Name="HomeOne_Radio"
                             Uid="1" IsChecked="True" Width="250"
                             Margin="0,0,0,0"
                             VerticalAlignment="Center"
                             GroupName="Rt">

                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Checked">
                            <i:InvokeCommandAction Command="{Binding Set_User_Show}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type RadioButton}, AncestorLevel=1, Mode=FindAncestor}}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>




                    <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Stretch">
                        <TextBlock Style="{StaticResource 标题_图标_选择动画样式}"
                                   Text="&#xE609;" Margin="5"
                                   HorizontalAlignment="Center"
                                   FontFamily="./Resources/#iconfont"
                                   FontSize="35" />
                        <TextBlock Style="{StaticResource 标题_字体_选择动画样式}"
                                   Text="控制台" Margin="10,5,10,0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="{StaticResource 标题_字体_正常字号}"
                                   TextOptions.TextHintingMode="Fixed" />
                    </WrapPanel>



                </RadioButton>


                <RadioButton Style="{StaticResource 标题_选项_样式}" x:Name="ProgramEdit_Radio"
                             Uid="2" Width="250" Margin="0,0,0,0"
                             HorizontalAlignment="Stretch"
                             GroupName="Rt">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Checked">
                            <i:InvokeCommandAction Command="{Binding Set_User_Show}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type RadioButton}, AncestorLevel=1, Mode=FindAncestor}}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>

                    <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Stretch">
                        <TextBlock Style="{DynamicResource 标题_图标_选择动画样式}"
                                   Text="&#xE67E;" Margin="5"
                                   HorizontalAlignment="Center"
                                   FontFamily="./Resources/#iconfont"
                                   FontSize="35" />
                        <TextBlock Style="{StaticResource 标题_字体_选择动画样式}"
                                   Text="实时数据" Margin="10,5,10,0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="{StaticResource 标题_字体_正常字号}"
                                   FontFamily="Microsoft JhengHei UI" />
                    </WrapPanel>

                </RadioButton>

                <RadioButton Style="{StaticResource 标题_选项_样式}" x:Name="RealData_Radio"
                             x:Uid="3" Width="250" Margin="0,0,0,0"
                             HorizontalAlignment="Stretch"
                             GroupName="Rt">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Checked">
                            <i:InvokeCommandAction Command="{Binding Set_User_Show}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type RadioButton}, AncestorLevel=1, Mode=FindAncestor}}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>


                    <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Stretch">
                        <TextBlock Style="{StaticResource 标题_图标_选择动画样式}"
                                   Text="&#xE6A5;" Margin="5"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Stretch"
                                   FontFamily="./Resources/#iconfont"
                                   FontSize="35" />
                        <TextBlock Style="{StaticResource 标题_字体_选择动画样式}"
                                   Text="程序编辑" Margin="10,0,10,0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="{StaticResource 标题_字体_正常字号}"
                                   FontFamily="Microsoft JhengHei UI" />
                    </WrapPanel>

                </RadioButton>

                <RadioButton Style="{StaticResource 标题_选项_样式}" x:Name="WeldingGui_Radio"
                             x:Uid="4" Width="250" Margin="0,0,0,0"
                             GroupName="Rt">

                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Checked">
                            <i:InvokeCommandAction Command="{Binding Set_User_Show}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type RadioButton}, AncestorLevel=1, Mode=FindAncestor}}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>

                    <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Stretch">
                        <TextBlock Style="{StaticResource 标题_图标_选择动画样式}"
                                   Text="&#xE635;" Margin="5"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Stretch"
                                   FontFamily="./Resources/#iconfont"
                                   FontSize="35" />
                        <TextBlock Style="{StaticResource 标题_字体_选择动画样式}"
                                   Text="振镜界面" Margin="10,0,10,0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="{StaticResource 标题_字体_正常字号}" />
                    </WrapPanel>
                </RadioButton>




            </StackPanel>








            <Grid Grid.Row="1" ShowGridLines="True" />
            <StackPanel Grid.Column="2"
                        Margin="0,-18,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">


                <Button Style="{DynamicResource ButtonStyle1}"
                        x:Uid="1" Width="35" Height="35"
                        Margin="12,0,12,0" Background="#2AD043"
                        BorderThickness="2" BorderBrush="Gray">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <i:InvokeCommandAction Command="{Binding Path=DataContext.Min_Window, RelativeSource={RelativeSource AncestorType={x:Type Grid}, Mode=FindAncestor}}" CommandParameter="{Binding ElementName=WD1}" PassEventArgsToCommand="True" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Button>
                <Button Style="{DynamicResource ButtonStyle1}"
                        x:Uid="2" Width="35" Height="35"
                        Margin="12,0,12,0" Background="#FFBC2F"
                        BorderThickness="2" BorderBrush="Gray">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <i:InvokeCommandAction Command="{Binding Path=DataContext.Max_Window, RelativeSource={RelativeSource AncestorType={x:Type Grid}, Mode=FindAncestor}}" CommandParameter="{Binding ElementName=WD1}" PassEventArgsToCommand="True" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Button>
                <Button Style="{DynamicResource ButtonStyle1}"
                        x:Uid="3" Width="35" Height="35"
                        Margin="12,0,12,0" Background="#FF5E57"
                        BorderThickness="2" BorderBrush="Gray">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <i:InvokeCommandAction Command="{Binding Path=DataContext.Close_Window, RelativeSource={RelativeSource AncestorType={x:Type Grid}, Mode=FindAncestor}}" CommandParameter="{Binding ElementName=WD1}" PassEventArgsToCommand="True" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Button>

            </StackPanel>

        </Grid>



        <!--  分割装饰栏  -->
        <Border Grid.Row="1">
            <Border.Background>
                <RadialGradientBrush>
                    <GradientStop Offset="0.9" Color="#FF065684" />
                    <GradientStop Offset="1" Color="#FFE3E3E3" />
                </RadialGradientBrush>
            </Border.Background>
        </Border>





        <!--  标题栏对应显示的内容  -->
        <!--<Frame Grid.Row="2"
               IsEnabled="True" Visibility="Collapsed"
               Source="{Binding Uri_Show.Frame_Source}"
               NavigationUIVisibility="Hidden"
               Background="Transparent" Opacity="1"
               DataContext="{Binding Source={StaticResource Locator}, Path=FrameShow}" />-->

        <ContentControl Grid.Row="2" Content="{Binding User_Show}" DataContext="{Binding Source={StaticResource Locator}, Path=FrameShow}" />


        <usermessage:User_Message Grid.Row="0" Grid.RowSpan="3" Visibility="Visible" />
    </Grid>





</Window>
