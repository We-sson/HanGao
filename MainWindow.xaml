<Window x:Name="window"
        x:Class="悍高软件.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:悍高软件"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:Custom="http://www.galasoft.ch/mvvmlight"
        Title="MainWindow" Width="1920"
        Height="1080" mc:Ignorable="d">
    <Window.Resources />
    <Window.Triggers />











    <Grid x:Name="grid" Background="#E3E3E3">
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="5" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--  主页标题栏  -->
        <Grid Grid.Row="0" ShowGridLines="True" DataContext="{Binding Source={StaticResource Locator}, Path=FrameShow}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.3*" />
                <ColumnDefinition />
                <ColumnDefinition Width=" 0.2*" />
            </Grid.ColumnDefinitions>

            <!--  首页_左上角_公司图标  -->
            <Image Style="{StaticResource 首页_左上角_公司图标_样式}" Grid.Column="0"
                   Width="300" Margin="25,0,35,0"
                   HorizontalAlignment="Center" />
            <StackPanel Grid.Column="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">

                <RadioButton Style="{StaticResource 标题_选项_样式}" x:Name="HomeOne_Radio"
                             Uid="1" IsChecked="True" Width="250"
                             Margin="0,0,0,0"
                             VerticalAlignment="Center"
                             GroupName="Rt">

                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Checked">
                            <i:InvokeCommandAction Command="{Binding Set_User_Show}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type RadioButton}, AncestorLevel=1, Mode=FindAncestor}}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>




                    <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Stretch">
                        <TextBlock Style="{StaticResource 标题_图标_选择动画样式}"
                                   Text="&#xE609;" Margin="5"
                                   HorizontalAlignment="Center"
                                   FontFamily="./Resources/#iconfont"
                                   FontSize="35" />
                        <TextBlock Style="{StaticResource 标题_字体_选择动画样式}"
                                   Text="控制台" Margin="10,5,10,0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="{StaticResource 标题_字体_正常字号}"
                                   TextOptions.TextHintingMode="Fixed" />
                    </WrapPanel>



                </RadioButton>


                <RadioButton Style="{StaticResource 标题_选项_样式}" x:Name="ProgramEdit_Radio"
                             Uid="2" Width="250" Margin="0,0,0,0"
                             HorizontalAlignment="Stretch"
                             GroupName="Rt">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Checked">
                            <i:InvokeCommandAction Command="{Binding Set_User_Show}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type RadioButton}, AncestorLevel=1, Mode=FindAncestor}}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>

                    <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Stretch">
                        <TextBlock Style="{DynamicResource 标题_图标_选择动画样式}"
                                   Text="&#xE67E;" Margin="5"
                                   HorizontalAlignment="Center"
                                   FontFamily="./Resources/#iconfont"
                                   FontSize="35" />
                        <TextBlock Style="{StaticResource 标题_字体_选择动画样式}"
                                   Text="实时数据" Margin="10,5,10,0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="{StaticResource 标题_字体_正常字号}"
                                   FontFamily="Microsoft JhengHei UI" />
                    </WrapPanel>

                </RadioButton>

                <RadioButton Style="{StaticResource 标题_选项_样式}" x:Name="RealData_Radio"
                             x:Uid="3" Width="250" Margin="0,0,0,0"
                             HorizontalAlignment="Stretch"
                             GroupName="Rt">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Checked">
                            <i:InvokeCommandAction Command="{Binding Set_User_Show}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type RadioButton}, AncestorLevel=1, Mode=FindAncestor}}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>


                    <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Stretch">
                        <TextBlock Style="{StaticResource 标题_图标_选择动画样式}"
                                   Text="&#xE6A5;" Margin="5"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Stretch"
                                   FontFamily="./Resources/#iconfont"
                                   FontSize="35" />
                        <TextBlock Style="{StaticResource 标题_字体_选择动画样式}"
                                   Text="程序编辑" Margin="10,0,10,0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="{StaticResource 标题_字体_正常字号}"
                                   FontFamily="Microsoft JhengHei UI" />
                    </WrapPanel>

                </RadioButton>

                <RadioButton Style="{StaticResource 标题_选项_样式}" x:Name="WeldingGui_Radio"
                             x:Uid="4" Width="250" Margin="0,0,0,0"
                             GroupName="Rt">

                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Checked">
                            <i:InvokeCommandAction Command="{Binding Set_User_Show}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type RadioButton}, AncestorLevel=1, Mode=FindAncestor}}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>

                    <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Stretch">
                        <TextBlock Style="{StaticResource 标题_图标_选择动画样式}"
                                   Text="&#xE635;" Margin="5"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Stretch"
                                   FontFamily="./Resources/#iconfont"
                                   FontSize="35" />
                        <TextBlock Style="{StaticResource 标题_字体_选择动画样式}"
                                   Text="振镜界面" Margin="10,0,10,0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="{StaticResource 标题_字体_正常字号}" />
                    </WrapPanel>
                </RadioButton>




            </StackPanel>








            <Grid Grid.Row="1" ShowGridLines="True" />

        </Grid>


        <!--  分割装饰栏  -->
        <Border Grid.Row="1">
            <Border.Background>
                <RadialGradientBrush>
                    <GradientStop Offset="0.9" Color="#FF065684" />
                    <GradientStop Offset="1" Color="#FFE3E3E3" />
                </RadialGradientBrush>
            </Border.Background>
        </Border>





        <!--  标题栏对应显示的内容  -->
        <!--<Frame Grid.Row="2"
               IsEnabled="True" Visibility="Collapsed"
               Source="{Binding Uri_Show.Frame_Source}"
               NavigationUIVisibility="Hidden"
               Background="Transparent" Opacity="1"
               DataContext="{Binding Source={StaticResource Locator}, Path=FrameShow}" />-->

        <ContentControl Grid.Row="2" Content="{Binding User_Show}" DataContext="{Binding Source={StaticResource Locator}, Path=FrameShow}" />


    </Grid>
</Window>
