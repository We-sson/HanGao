<l>    if (I == 0)</l>
<l>        PoseIn := [-0.006, -0.296, 12, 178, 2, 270, 0]</l>
<l>    else</l>
<l>        PoseIn := PoseOut</l>
<l>    endif</l>
<l>    visualize_object_model_3d (WindowHandleR, [OM3DObject,OM3DTool,OM3DBase,OM3DCamera], [], PoseIn, ParamName, ParamValue, [], Labels, Instructions, PoseOut)</l>
